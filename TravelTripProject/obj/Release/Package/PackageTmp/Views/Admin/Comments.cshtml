@using TravelTripProject.Models.Classes
@model List<Comment>
@{
    ViewBag.Title = "Comments";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Yorum Listesi</h3>
<br />
<table class="table table-bordered">
    <tr>
        <th>Kullanıcı Adı</th>
        <th>Mail</th>
        <th>Yorum</th>
        <th>Blog</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach(var item in Model) {
    <tr>
        <td>@item.KullaniciAdi</td>
        <td>@item.Mail</td>
        <td>@item.yorum</td>
        <td>@item.Blog.Baslik</td>
        <td><a href="/Admin/DeleteComment/@item.ID" class="btn btn-danger">Sil</a></td>
        <td><a href="/Admin/FetchComment/@item.ID" class="btn btn-warning">Güncelle</a></td>
    </tr>
    }
</table>

