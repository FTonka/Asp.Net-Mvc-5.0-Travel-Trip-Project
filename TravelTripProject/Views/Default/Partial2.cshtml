@using TravelTripProject.Models.Classes
@model List<Blog>

@foreach(var item in Model)
{
<div class="right">
    <div class="bot-left">
        <img src="@item.BlogImg" alt="" style="width:345px;height:185px" />
    </div>
    <div class="left-text">

        <h4><a href="/Blog/BlogDetails/@item.ID">@item.Baslik</a></h4>
        <span class="doller">@item.Tarih.ToString("dd/MM/yyyy")</span>
        <p>@item.Aciklama.Substring(0,120)</p>
        <p><a href="/Blog/BlogDetails/@item.ID"><span class="read">Devamını Oku >></span></a></p>
    </div>
</div>
}